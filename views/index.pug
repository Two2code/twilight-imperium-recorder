extends layout

block content
  a(class='btn green lighten-1 waves-effect waves-teal' href='#registerModal' style='height:200px; width: 180px;') +

  div(id='registerModal' class='modal')
    div(class='modal-content')
      h4 Registeration

      div(class='row')
        form(class='col s12')
          div(class='row')
            div(class='input-field col s6')
              input(id='_player_name' type='text' class='validate' name='playerName' required)
              label(for='_player_name') Player Name

          div(class='row')
            div(class='input-field col s6')
              input(id='_password' type='password' class='validate' name='password' required)
              label(for='_password') Password

          button(type='submit' class='modal-action btn waves-effect waves-orange') Register
          button(type='button' class='modal-action modal-close waves-effect waves-green btn-flat') Close
